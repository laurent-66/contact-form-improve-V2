{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger text-center" role="alert">Identifiants Invalides</div>
    {% endif %}
    {% if app.user %}
        <a type="button" class="btn btn-info" href="{{path('contact-list')}}">Liste des contacts</a>
    {% endif %}

    <div class="container-fluid">
        <h2 class="text-center m-5">Connexion Administrateur</h2>
        <div class="container my-4">
            <form  action="{{ path('app_login') }}" method="post">
                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="text" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="Votre email">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password"  placeholder="Votre mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </form>
        </div>
    </div>





{% endblock %}